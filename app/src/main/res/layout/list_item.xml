<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:id="@+id/root_layout">


    <TextView
        android:id="@+id/lbl_title"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:text="Pork Medallions with Balsamic Vinegar and Capers"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/lbl_description"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:text="This is one meal to impress dinner guests that will not break the bank nor will it take very much time! Served with a green salad, red potatoes, and asparagus, this meal will turn out with a memorable presentation"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lbl_title"
        android:textSize="18sp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintHorizontal_bias="1.0" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@id/lbl_description"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>